<?xml version="1.0" encoding="UTF-8"?>
<project version="1">
    <root name="."/>
    <builddir>build/cppcheck</builddir>
    <importproject>compile_commands.json</importproject>
    <analyze-all-vs-configs>true</analyze-all-vs-configs>
    <check-headers>true</check-headers>
    <check-unused-templates>true</check-unused-templates>
    <max-ctu-depth>4</max-ctu-depth>
    <max-template-recursion>100</max-template-recursion>

    <!-- Paths to check -->
    <paths>
        <dir name="core/"/>
        <dir name="values/"/>
        <dir name="internal/"/>
        <dir name="integration/"/>
    </paths>

    <!-- Excluded paths -->
    <exclude>
        <path name="build/"/>
        <path name="build-*/"/>
        <path name="vcpkg/"/>
        <path name="vcpkg_installed/"/>
        <path name=".git/"/>
        <path name="tests/"/>
        <path name="samples/"/>
        <path name="examples/"/>
    </exclude>

    <!-- Suppressions for container system -->
    <suppressions>
        <!-- Suppress performance warnings for variant value operations -->
        <suppression>passedByValue</suppression>

        <!-- Suppress warnings about SIMD code -->
        <suppression>
            <id>unusedFunction</id>
            <fileName>internal/simd_processor.cpp</fileName>
        </suppression>
    </suppressions>

    <!-- Enabled checks -->
    <addon>threadsafety.py</addon>
    <addon>cert.py</addon>
</project>
